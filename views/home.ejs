<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>To-Do</title>
</head>

<body>
    <div class="container-fluid">
        <div class="container">
            <h2>
                <%= kindofday %>
            </h2>
        </div>
        <div class="bg">
            <form action="/delete" method="post">
                <% for(let i of add_item){ %>
                    <div class="item">
                        <div class="round">
                            <li><input type="checkbox" name="checkbox" value="<%=i._id%>" onChange="this.form.submit()"
                                    id="checkbox">
                                <label for="checkbox"></label>
                                <%= i.name %>
                            </li>
                        </div>
                    </div>
                    <% } %>
            </form>
        </div>
        <form action="/" method="post">
            <div class="combine">
                <input type="text" name="list" autocomplete="off" placeholder="Add Item">
                <button type="submit">Add</button>
            </div>
        </form>
    </div>
    </div>
</body>

</html>